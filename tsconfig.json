{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sura-platform/*": ["libs/*"],
      "@sura-platform/web": ["xplat/web/index.ts"],
      "@sura-platform/web/*": ["xplat/web/*"],
      "@sura-platform/apps/*": ["apps/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
